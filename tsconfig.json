{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "express",
            "inversify",
            "mocha",
            "reflect-metadata"
        ],
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "allowJs": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true,
        "declaration": true,
        "outDir": "./dist",
        "sourceRoot": "./src",
        "skipLibCheck": true
    },
    "exclude": [
        "src/test",
        "node_modules",
        "dist"
    ]
}
